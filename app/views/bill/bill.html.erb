<header>
  <div class="container">
    <div class="header-wrapper">
      <div class="logo-brand">
        <a href="/" style="font-weight:700">
          HOME PAGE
        </a>
        </div>
          <div class="search-form">
            <form class="d-flex">
              <div class="wrap">
                <div class="search">
                  <input
                    type="text"
                    class="searchTerm"
                    placeholder="Tìm kiếm món ăn"
                  />
                  <button type="submit" class="searchButton">
                    <i class="fa fa-search"></i>
                  </button>
                </div>
              </div>
            </form>
          </div>
          <div class="nav-actions-btn">
            <a href="/bill/bill" class="btn btn-active-course">
              <span>Đặt hàng</span>
              <i class="fas fa-unlock"></i>
            </a>
            <a href="/bill/bill" class="btn btn-cart">
              <i class="fas fa-shopping-cart"></i>
            </a>
          </div>
          <div class="nav-user-action">
          <% if @user%>
          <%= link_to "Logout",destroy_user_session_path,method: :DELETE ,class:"btn btn-login"%>
          <%= link_to "Profile", edit_user_registration_path%>
          <%end%>
          <% if !@user%>
          <%= link_to "Login", new_user_session_path,class:"btn btn-login"%>
          <%= link_to "Register", new_user_registration_path,class:"btn btn-register"%>
          <%end%>
           
          </div>
        </div>
      </div>
</header>

<div class="container" style="margin-top:70px">

<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Time</th>
      <th>Status</th>
      <th>Total</th>
      <th>Price</th>
      <th>Show</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
  <% i = 0 %>
    <% @bills.each do |bill| %>
      <tr>
        <td><%= bill.time %></td>
        <td><%= bill.status == 1 ? 'Đang lên đơn' : 'Hoàn thành'%></td>
        <td><%= @bill_total[i]%></td>
        <td><%= @bill_price[i]%></td>
        <td><%= link_to "Show",bill_item_path(bill)%></td>
        <td>Delete</td>
      </tr>
      <%i += 1%>
    <% end %>
  </tbody>
</table>
</div>