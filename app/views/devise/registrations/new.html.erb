<section class="vh-100 gradient-custom">
  <div class="container py-5 h-100">
    <div class="row justify-content-center align-items-center h-100">
      <div class="col-12 col-lg-9 col-xl-7">
        <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
          <div class="card-body p-4 p-md-5">
            <h3 class="mb-3 pb-2 pb-md-0 mb-md-5">Registration Form</h3>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
              <div class="row">
                <div class="col-md-6 mb-3">
                  <div class="form-floating">
                   <%= f.text_field :name, autofocus: true,class:"form-control form-control-sm"%>
                    <label  for="name">Name</label>
                  </div>
                </div>
                 <div class="col-md-6 mb-3 pb-2">
                  <div class="form-floating">
                     <%= f.text_field :phoneNumber, autofocus: true,class:"form-control form-control-sm" %>
                    <label  for="phoneNumber">Phone Number</label>
                  </div>
                </div>
              </div>

              <div class="row">
                <div class="col-md-6 mb-3 d-flex align-items-center">

                  <div class="form-floating datepicker w-100">
                   <%= f.date_field :dob, autofocus: true ,class:"form-control form-control-sm " %>
                    <label for="birthdayDate" >Birthday</label>
                  </div>

                </div>
                 <div class="col-md-6 mb-3">

                  <div class="form-floating">
                      <%= f.number_field :age, autofocus: true ,class:"form-control form-control-sm "%>
                    <label  for="age">Age</label>
                  </div>

                </div>
              </div>

              <div class="row">
                <div class="col-md-6 mb-3 pb-2">
                  <div class="form-floating">
                  <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class:"form-control form-control-sm "%>
                    <label  for="emailAddress">Email</label>
                  </div>
                </div> 
                <div class="col-md-6 mb-3 pb-2">
                  <div class="form-floating">
                  <%= f.password_field :password, autocomplete: "new-password",class:"form-control form-control-sm "%>
                    <label  for="">Password</label>
                  </div>
                </div> 
              </div>
              <div class="row">
              <div class="col-md-12 mb-3">
                  <div class="form-floating">
                   <%= f.text_field :address, autofocus: true ,class:"form-control form-control-sm "%>
                    <label  for="address">Address</label>
                  </div>
                </div>
               
              </div>
              <div class="col-md-12 mb-3 pb-2">
               <%= f.file_field :avatar, autofocus: true,class:"form-control form-control-sm " %>
                <div class="small text-muted mt-2">Upload your avatar. </div>
              </div>
              <div class="mt-4 pt-2">
              <%= f.submit "Sign up",class: "btn btn-primary btn-lg" %>
              </div>
            <%end%>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>







