<div style="margin-left: 100px;">
<%= form_with(model: food) do |form| %>
  <% if food.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(food.errors.count, "error") %> prohibited this food from being saved:</h2>

      <ul>
        <% food.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
  <% if @categories %>
  <h5><label style="width:100px; height: 30px;">
  <%= form.label "Category" %>
  </label>
   <%= form.collection_select :category_id, @categories.order(:name), :id, :name %>
   <%end%>
  </h5>
</div>
<br>
  <div class="field">
    <label style="width:100px; height: 30px;">
    <b><%= form.label :name %></b>
    </label>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <label style="width:100px; height: 30px;">
    <b><%= form.label :price %></b>
    </label>
    <%= form.text_field :price %>
  </div>

  <div class="field">
   <label style="width:100px; height: 30px;">
    <b><%= form.label :total %></b>
    </label>
    <%= form.number_field :total %>
  </div>

  <div class="field">
    <label style="width:100px; height: 30px;">
    <b><%= form.label :decription %></b>
    </label>
    <%= form.text_field :decription %>
  </div>

  <div class="field">
    <label style="width:100px; height: 30px;">
    <b><%= form.label :vote %></b>
    </label>
    <%= form.number_field :vote %>
  </div>
  <div class="field">
    <label style="width:100px; height: 30px;">
    <b><%= form.label :image %></b>
    </label>
    <%= form.file_field :image %>
</div>
