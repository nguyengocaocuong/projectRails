<p id="notice"><%= notice %></p>

<h1>Foods</h1>

<table table="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Total</th>
      <th>Decription</th>
      <th>Vote</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @foods.each do |food| %>
      <tr>
        <td><%= food.name %></td>
        <td><%= food.price %></td>
        <td><%= food.total %></td>
        <td><%= food.decription %></td>
        <td><%= food.vote %></td>
        <td><%= image_tag food.image, style: 'width:50px;height:50px' %></td>
        <td><%= link_to 'Show', food %></td>
        <td><%= link_to 'Edit', edit_food_path(food) %></td>
        <td><%= link_to 'Destroy', food, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

