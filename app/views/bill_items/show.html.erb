<div class="container">

<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Name</th>
      <th>Image</th>
      <th>Total</th>
      <th>Price</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
  <%i = 0%>
  <%@billItems.each do |item| %>
      <tr>
        <td><%= @foods[i].name %></td>
        <td><%= image_tag @foods[i].image,style:'width:30px;height:30px' %></td>
        <td><%= item.total %></td>
        <td><%= item.total*@foods[i].price %></td>
        <td>Delete</td>
      </tr>
      <%i+=1%>
    <% end %>
  </tbody>
</table>
  <a class="btn btn-outline-primary float-right">Thanh toan</a>
</div>
    